<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="What did you think of the speed of the lesson?"
        android:layout_margin="20dp"
        />

    <ImageView
        android:id="@+id/img_smiley"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_speed_slow"
        android:scaleType="fitCenter"/>


    <TextView
        android:id="@+id/txt_smiley_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/img_smiley"
        android:textSize="20sp"
        android:text="Toooo slowwwww"
        android:layout_margin="20dp"
        />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_smiley_text"
        android:layout_marginTop="40dp"
        app:isb_progress="0"
        app:isb_track_background_color="@color/keyword_blue"
        app:isb_show_indicator="none"
        app:isb_show_tick_marks_type="divider"
        app:isb_ticks_count="3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:isb_thumb_size="100dp"
        app:isb_thumb_drawable="@drawable/thumb_big"/>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Submit!"
        android:textColor="@color/keyword_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/welcome_section"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>


</RelativeLayout>